@model BusinessLayer.Employee
@{

    ViewBag.Title = "Employee Detials";
}

<h2>
    Employee Details
</h2>
<table style="font-family:Arial">
    <tr>
        <td>
            <b>Employee ID: </b>
        </td>
        <td>
            @Model.EmployeeID
        </td>
    </tr>
    <tr>
        <td>
            <b>Name: </b>
        </td>
        <td>
            @Model.Name
        </td>
    </tr>
    <tr>
        <td>
            <b>Gender: </b>
        </td>
        <td>
            @Model.Gender
        </td>
    </tr>
    <tr>
        <td>
            <b>City: </b>
        </td>
        <td>
            @Model.City
        </td>
    </tr>
</table>
@Html.ActionLink("Back to Employee list","Index",new { departmentId = @Model.DepartmentID })